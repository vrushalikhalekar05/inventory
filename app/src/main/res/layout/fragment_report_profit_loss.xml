<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ampinity.inv.fragment.ReportSalesfragment">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewTaxGroup"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Search By"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:textColor="#000000"
                style="?android:textAppearanceMedium"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerSearchBy"
                android:layout_margin="5dp"
                android:spinnerMode="dialog"
                >

            </Spinner>


        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewName"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text=""
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="Enter Detail"
                android:gravity="bottom"

                android:id="@+id/idEditTextRate"
                style="?android:textAppearanceMedium"
                android:inputType="text"
                android:layout_weight="1.5"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show"
            android:id="@+id/idButtonAddSalesReturn"
            style="?android:textAppearanceMedium"

            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffff"
            android:textColorHint="#000000"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TableLayout

                    android:divider="@color/white"
                    android:paddingTop="10dp"
                    android:layout_margin="10dp"

                    android:showDividers="middle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*">
                    <TableRow
                        android:background="@drawable/table_row_last_bg"
                        >
                        <TextView
                            android:gravity="center"
                            android:text=" ID "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/tableheaderIdprofitloss"




                            />
                        <TextView
                            android:gravity="center"
                            android:text=" Inword "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/table_cell_bg"
                            android:id="@+id/tableheaderNameAttribute"
                            />
                        <TextView
                            android:gravity="center"
                            android:text="Billing "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/tableheaderbilling"

                            />
                        <TextView
                            android:gravity="center"
                            android:text="Expenses "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/table_cell_bg"
                            android:id="@+id/tableheaderExpenses"
                            />
                        <TextView
                            android:gravity="center"
                            android:text=" salary "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/tablesalary"

                            />
                        <TextView
                            android:gravity="center"
                            android:text="  Amount "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/table_cell_bg"
                            android:id="@+id/tableheaderAmount"
                            />
                        <TextView
                            android:gravity="center"
                            android:text=" Profit "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/tableProfit"

                            />
                        <TextView
                            android:gravity="center"
                            android:text="  Loss "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/table_cell_bg"
                            android:id="@+id/tableheaderLoss"
                            />
                    </TableRow>
                    <TableRow
                        android:background="@drawable/table_row_bg">
                        <TextView
                            android:textColor="@color/textcolor"
                            android:text="1"
                            android:gravity="center"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="cc"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="cc"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="cc"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            />
                    </TableRow>
                    <TableRow
                        android:background="@drawable/table_row_bg"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/textcolor"
                            android:text="2"
                            android:gravity="center"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="km"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="cc"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="cc"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <ListView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id = "@+id/listview"
                android:nestedScrollingEnabled="true"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:divider = "@null"/>
        </LinearLayout>





    </LinearLayout>





</LinearLayout>
