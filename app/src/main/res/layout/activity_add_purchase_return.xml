                            android:background="@drawable/table_cell_bg"
                            android:textStyle="bold"
                            android:textColor="@color/white"

                            />
                        <TextView
                            android:gravity="center"
                            android:text="CGST"
                            android:textStyle="bold"
                            android:textColor="@color/white"

                            />
                    </TableRow>
