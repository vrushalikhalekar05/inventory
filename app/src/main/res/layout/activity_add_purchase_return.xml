                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="200"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="2"
                            android:background="@drawable/table_cell_bg"
                            android:textStyle="italic"

