                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:visibility="gone"
                    android:hint="Enter  Name"
                    android:gravity="bottom"

                    android:id="@+id/idEditTextPurchaseEntryName"
                    style="?android:textAppearanceMedium"
                    android:inputType="text"
                    android:layout_weight="1.5"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:textColor="#000000"
                    style="?android:textAppearanceMedium"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinnervendername"

                    android:spinnerMode="dropdown"
                    android:background="@drawable/spinner1"
                    >

                </Spinner>


            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idTextViewSupplierBillNo"
                    android:textColor="@color/textColor"
                    android:layout_margin="5dp"
                    android:text="Supplier Bill No "
                    android:textStyle="bold"
                    android:layout_gravity="center"

                    style="?android:textAppearanceSmall"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Enter  Supplier Bill No"
                    android:gravity="bottom"
                    android:background="@drawable/shaperound"
                    android:id="@+id/idEditTextSupplierBillNo"
                    style="?android:textAppearanceMedium"
                    android:inputType="number"
                    android:layout_weight="1.5"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
