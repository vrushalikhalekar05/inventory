                        <TextView
                            android:gravity="center"
                            android:text="Item Name"
                            android:textStyle="bold"
                            android:textColor="@color/white"



                            />
                        <TextView
                            android:gravity="center"
                            android:text="Item Code"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/table_cell_bg"
                            />
                        <TextView
                            android:gravity="center"
                            android:text="Price"
                            android:textStyle="bold"
                            android:textColor="@color/white"

                            />
                        <TextView
                            android:gravity="center"
                            android:text="Qty"
                            android:textStyle="bold"
                            android:background="@drawable/table_cell_bg"
                            android:textColor="@color/white"

                            />
                        <TextView
