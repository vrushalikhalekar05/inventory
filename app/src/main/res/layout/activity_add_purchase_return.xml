                            android:textColor="@color/textcolor"
                            android:text="2"
                            android:background="@drawable/table_cell_bg"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="2"
                            android:textStyle="italic"

                            />
                    </TableRow>


