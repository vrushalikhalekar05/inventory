<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id = "@+id/relativeLayout1"
        android:layout_width = "fill_parent"
        android:weightSum="7"
        android:layout_height = "wrap_content"
        android:background = "#ffffff" >

        <TextView
            android:id = "@+id/idattributedetail"
            android:layout_width = "30dp"
            android:layout_height = "match_parent"

            android:background = "@drawable/cell_shape_start"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:gravity="center"
            android:text = "id"
            android:textColor="#000000"
            android:singleLine = "true" />

        <TextView
            android:id="@+id/attributedetail"
            android:layout_width="250dp"
            android:layout_height="match_parent"

            android:background="@drawable/cell_shape"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="LOB  Name"
            android:textColor="#000000" />

        <TextView
            android:id = "@+id/attributedetaillobname"
            android:layout_width = "150dp"
            android:layout_height = "match_parent"

            android:gravity="center"
            android:background = "@drawable/cell_shape"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:text = "Attribute Name"
            android:textColor="#000000"
            android:singleLine = "true" />

        <TextView

            android:id = "@+id/Name"
            android:layout_width = "250dp"
            android:layout_height = "match_parent"

            android:gravity="center"

            android:background = "@drawable/cell_shape"
            android:ellipsize = "end"
            android:textColor="#000000"
            android:padding = "5dp"
            android:text = "Name"
            android:singleLine = "true" />
        <TextView

            android:id = "@+id/ShortName"
            android:layout_width = "150dp"
            android:layout_height = "match_parent"

            android:gravity="center"

            android:background = "@drawable/cell_shape"
            android:ellipsize = "end"
            android:textColor="#000000"
            android:padding = "5dp"
            android:text = "Short Name"
            android:singleLine = "true" />

        <LinearLayout
            android:background = "@drawable/cell_shape"
            android:layout_width="80dp"
            android:gravity = "center"

            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/idimageviewedit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/editblue"/>

        </LinearLayout>
        <LinearLayout
            android:background = "@drawable/cell_shape"
            android:layout_width="80dp"
            android:gravity = "center"

            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/idimageviewdeletered"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/cancelred"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>