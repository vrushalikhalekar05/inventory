<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d2d2d2"

    tools:context="com.ampinity.inv.Activity.UpdateBankActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout


            android:elevation="3dp"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout

                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >

                <TextView
                    android:id="@+id/idTextViewIDBank"
                    android:textColor="@color/textColor"
                    android:layout_margin="5dp"
                    android:text="ID"
                    android:layout_gravity="center"

                    android:textStyle="bold"
                    style="?android:textAppearanceSmall"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:background="#00000000"
                    android:text=""
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:editable="false"
                    android:id="@+id/idEditTextID"
                    style="?android:textAppearanceMedium"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idTextViewBankName"
                    android:textColor="@color/textColor"
                    android:layout_margin="5dp"
                    android:text="Name "
                    android:textStyle="bold"
                    android:layout_gravity="center"

                    style="?android:textAppearanceSmall"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Enter Your Name"
                    android:background="@drawable/shaperound"
                    android:id="@+id/idEditTextName"
                    style="?android:textAppearanceMedium"
                    android:inputType="text"
                    android:layout_weight="1.5"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idTextViewBranchName"
                    android:textColor="@color/textColor"
                    android:layout_margin="5dp"
                    android:text="Address"
                    android:textStyle="bold"
                    android:layout_gravity="center"

                    style="?android:textAppearanceSmall"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Enter Address"
                    android:background="@drawable/shaperound"
                    android:id="@+id/idEditTextAddress"
                    style="?android:textAppearanceMedium"
                    android:inputType="text"
                    android:layout_weight="1.5"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/idTextViewIFSCCode"
                    android:textColor="@color/textColor"
                    android:layout_margin="5dp"
                    android:text="State"
                    android:textStyle="bold" android:layout_gravity="center"
                    style="?android:textAppearanceSmall"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Enter State"
                    android:id="@+id/idEditTextState"
                    android:textColor="#000000"
                    android:background="@drawable/shaperound"
                    style="?android:textAppearanceMedium"
                    android:inputType="text"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/idTextViewCity"
                    android:textColor="@color/textColor"
                    android:layout_margin="5dp"
                    android:text="City"
                    android:textStyle="bold" android:layout_gravity="center"
                    style="?android:textAppearanceSmall"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Enter City"
                    android:id="@+id/idEditTextCity"
                    android:textColor="#000000"
                    android:background="@drawable/shaperound"
                    style="?android:textAppearanceMedium"
                    android:inputType="text"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/idTextViewPhoneNo"
                    android:textColor="@color/textColor"
                    android:layout_margin="5dp"
                    android:text="Phone No."
                    android:textStyle="bold" android:layout_gravity="center"
                    style="?android:textAppearanceSmall"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Enter Phone Number"
                    android:id="@+id/idEditTextPhoneNo"
                    android:textColor="#000000"
                    android:background="@drawable/shaperound"
                    style="?android:textAppearanceMedium"
                    android:inputType="text"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/idTextViewEmail"
                    android:textColor="@color/textColor"
                    android:layout_margin="5dp"
                    android:text="EmailId"
                    android:textStyle="bold" android:layout_gravity="center"
                    style="?android:textAppearanceSmall"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Enter EmailId"
                    android:id="@+id/idEditTextEmail"
                    android:textColor="#000000"
                    android:background="@drawable/shaperound"
                    style="?android:textAppearanceMedium"
                    android:inputType="text"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/idTextViewSalary"
                    android:textColor="@color/textColor"
                    android:layout_margin="5dp"
                    android:text="Salary"
                    android:textStyle="bold" android:layout_gravity="center"
                    style="?android:textAppearanceSmall"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Enter Salary"
                    android:id="@+id/idEditTextSalary"
                    android:textColor="#000000"
                    android:background="@drawable/shaperound"
                    style="?android:textAppearanceMedium"
                    android:inputType="text"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/idTextViewTarget"
                    android:textColor="@color/textColor"
                    android:layout_margin="5dp"
                    android:text="Basic Target"
                    android:textStyle="bold" android:layout_gravity="center"
                    style="?android:textAppearanceSmall"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Enter Basic Target"
                    android:id="@+id/idEditTextTarget"
                    android:textColor="#000000"
                    android:background="@drawable/shaperound"
                    style="?android:textAppearanceMedium"
                    android:inputType="text"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"

                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"

                    >

                    <Button
                        android:id="@+id/idButtonSave"
                        style="?android:textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dp"
                        android:background="@drawable/buttonshaperoundcolor"
                        android:text="Save"
                        android:textColor="#ffff"
                        android:textColorHint="#000000"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"

                    >

                    <Button
                        android:id="@+id/idButtonCancel"
                        style="?android:textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dp"
                        android:background="@drawable/buttonshaperoundcolor"
                        android:text="Cancel"
                        android:textColor="#ffff"
                        android:textColorHint="#000000"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>





        </LinearLayout>
    </ScrollView>
</LinearLayout>
