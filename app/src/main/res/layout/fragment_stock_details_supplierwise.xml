<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ampinity.inv.fragment.Stockdetailsfragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="2"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idTextViewTaxGroup"
                    android:textColor="@color/textColor"
                    android:layout_margin="5dp"
                    android:text="Search By"
                    android:textStyle="bold"
                    style="?android:textAppearanceSmall"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:textColor="#000000"
                    style="?android:textAppearanceMedium"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerSearchBy"
                    android:layout_margin="5dp"
                    android:spinnerMode="dialog"
                    >

                </Spinner>


            </LinearLayout>

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show"
                android:id="@+id/idButtonAddSalesReturn"
                style="?android:textAppearanceMedium"

                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffff"
                android:textColorHint="#000000"
                android:textStyle="bold"/>
            <TableLayout

                android:divider="@color/white"
                android:paddingTop="10dp"
                android:layout_margin="10dp"
                android:showDividers="middle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">
                <TableRow
                    android:background="@drawable/table_row_last_bg"
                    >
                    <TextView
                        android:gravity="center"
                        android:text=" S.NO "
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/tableheaderIdsno"




                        />
                    <TextView
                        android:gravity="center"
                        android:text=" Product Name "
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/table_cell_bg"
                        android:id="@+id/tableheaderproductname"
                        />
                    <TextView
                        android:gravity="center"
                        android:text=" Rate "
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/tableheaderIdtaxgrouprate"

                        />
                    <TextView
                        android:gravity="center"
                        android:text=" Qty "
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/table_cell_bg"
                        android:id="@+id/tableheaderqty"
                        />
                    <TextView
                        android:gravity="center"
                        android:text=" Discount "
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/tableheaderdiscount"

                        />
                    <TextView
                        android:gravity="center"
                        android:text=" CGST % "
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/table_cell_bg"
                        android:id="@+id/tableheaderIdtaxgroupcgit"
                        />
                    <TextView
                        android:gravity="center"
                        android:text=" SGST % "
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/tableheaderIdtaxgroupsgit"

                        />
                    <TextView
                        android:gravity="center"
                        android:text=" IGST % "
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/table_cell_bg"
                        android:id="@+id/tableheaderIdtaxgroupigit"

                        />
                </TableRow>
                <TableRow
                    android:background="@drawable/table_row_bg">
                    <TextView
                        android:textColor="@color/textcolor"
                        android:text="1"
                        android:gravity="center"
                        android:textStyle="italic"

                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="xyz"
                        android:textStyle="italic"
                        android:background="@drawable/table_cell_bg"
                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="3"
                        android:textStyle="italic"

                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="1"
                        android:textStyle="italic"
                        android:background="@drawable/table_cell_bg"
                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="3"
                        android:textStyle="italic"

                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="5"
                        android:textStyle="italic"
                        android:background="@drawable/table_cell_bg"
                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="3"
                        android:textStyle="italic"

                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="1"
                        android:textStyle="italic"
                        android:background="@drawable/table_cell_bg"
                        />
                </TableRow>
                <TableRow
                    android:background="@drawable/table_row_bg"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/textcolor"
                        android:text="2"
                        android:gravity="center"
                        android:textStyle="italic"

                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="xyz"
                        android:textStyle="italic"
                        android:background="@drawable/table_cell_bg"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="4"
                        android:textStyle="italic"

                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="1"
                        android:textStyle="italic"
                        android:background="@drawable/table_cell_bg"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="4"
                        android:textStyle="italic"

                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="5"
                        android:textStyle="italic"
                        android:background="@drawable/table_cell_bg"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="4"
                        android:textStyle="italic"

                        />
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:text="1"
                        android:textStyle="italic"
                        android:background="@drawable/table_cell_bg"
                        android:layout_height="wrap_content" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
