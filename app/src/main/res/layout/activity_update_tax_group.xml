<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d2d2d2"

    tools:context="com.ampinity.inv.Activity.UpdateTaxGroupActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout


        android:elevation="3dp"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/idTextViewIDGST"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="ID"


                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:background="#00000000"
                android:text="2"
                android:layout_gravity="center"

                android:textColor="#000000"
                android:editable="false"
                android:id="@+id/idEditTextIDGST"
                style="?android:textAppearanceMedium"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewTaxGroup"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Tax Group"
                android:layout_gravity="center"

                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
                <Spinner
                android:textColor="#000000"
                style="?android:textAppearanceMedium"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/spinnerTaxGroup"

                android:spinnerMode="dropdown"
                android:background="@drawable/spinner1"
                >

            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewRate"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Rate"
                android:textStyle="bold"
                android:layout_gravity="center"

                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="Enter  Rate"
                android:background="@drawable/shaperound"
                android:id="@+id/idEditTextRate"
                style="?android:textAppearanceMedium"
                android:inputType="number"
                android:layout_weight="1.5"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewCGST"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="CGST  %"
                android:textStyle="bold"
                android:layout_gravity="center"

                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="Enter  CGST %"
                android:background="@drawable/shaperound"
                android:id="@+id/idEditTextCGST"
                style="?android:textAppearanceMedium"
                android:inputType="numberDecimal"
                android:layout_weight="1.5"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewSGST"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="SGST %"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_gravity="center"

                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="Enter SGST %"
                android:id="@+id/idEditTextSGST"
                android:textColor="#000000"
                android:background="@drawable/shaperound"
                style="?android:textAppearanceMedium"
                android:inputType="numberDecimal"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />



        </LinearLayout>
        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewIGST"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0.5"

                android:text="IGST %"
                android:textColor="@color/textColor"
                android:textStyle="bold" />
            <EditText
                android:hint="Enter IGST %"
                android:id="@+id/idEditTextIGST"
                android:textColor="#000000"
                android:background="@drawable/shaperound"
                style="?android:textAppearanceMedium"
                android:inputType="numberDecimal"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />



        </LinearLayout>







        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"

                >

                <Button
                    android:id="@+id/idButtonSave"
                    style="?android:textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@drawable/buttonshaperoundcolor"
                    android:text="Save"
                    android:textColor="#ffff"
                    android:textColorHint="#000000"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"

                >

                <Button
                    android:id="@+id/idButtonCancel"
                    style="?android:textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@drawable/buttonshaperoundcolor"
                    android:text="Cancel"
                    android:textColor="#ffff"
                    android:textColorHint="#000000"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>





    </LinearLayout>
   </ScrollView>


</LinearLayout>
