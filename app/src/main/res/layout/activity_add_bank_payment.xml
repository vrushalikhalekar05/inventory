<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d2d2d2"

    tools:context="com.ampinity.inv.Activity.AddBankPaymentActivity"
    >


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout


        android:elevation="3dp"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/idTextViewIDCashpayment"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="ID"
                android:layout_gravity="center"

                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:background="#00000000"
                android:text="2"
                android:gravity="bottom"
                android:textColor="#000000"
                android:editable="false"
                android:id="@+id/idEditTextIDCashpayment"
                style="?android:textAppearanceMedium"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewBankName"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Voucher No "
                android:layout_gravity="center"

                android:textStyle="bold"
                style="?android:textAppearanceSmall"

                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="Enter Voucher No"
                android:background="@drawable/shaperound"
                android:id="@+id/idEditTextVoucherNo"
                style="?android:textAppearanceMedium"
                android:inputType="number"
                android:layout_weight="1.5"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewDate"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Receipt Date"
                android:textStyle="bold"
                android:layout_gravity="center"

                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="Enter  Date"
                android:gravity="bottom"
                android:background="@drawable/shaperound"
                android:id="@+id/idEditTextDate"
                style="?android:textAppearanceMedium"
                android:inputType="date"
                android:layout_weight="1.5"
                android:textColor="#000000"
                android:clickable="true"
                android:editable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />




        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewAccount"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Account"
                android:layout_gravity="center"

                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:textColor="#000000"
                style="?android:textAppearanceMedium"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/spinnerAccount"

                android:spinnerMode="dialog"
                android:background="@drawable/spinner1"
                >

            </Spinner>


        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewAccountName"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Account Name"
                android:layout_gravity="center"

                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:textColor="#000000"
                style="?android:textAppearanceMedium"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/spinnerAccountName"

                android:spinnerMode="dialog"
                android:background="@drawable/spinner1"
                >

            </Spinner>


        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewNarration"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Narration "
                android:layout_gravity="center"

                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="Enter Narration"
                android:gravity="bottom"
                android:background="@drawable/shaperound"
                android:id="@+id/idEditTextBranchName"
                style="?android:textAppearanceMedium"
                android:inputType="text"
                android:layout_weight="1.5"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewBank"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Bank"
                android:layout_gravity="center"

                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:textColor="#000000"
                style="?android:textAppearanceMedium"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/spinnerBank"

                android:spinnerMode="dialog"
                android:background="@drawable/spinner1"
                >

            </Spinner>


        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewBankBranch"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Bank Branch"
                android:layout_gravity="center"

                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:textColor="#000000"
                style="?android:textAppearanceMedium"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/spinnerBankBranch"

                android:spinnerMode="dropdown"
                android:background="@drawable/spinner1"
                >

            </Spinner>


        </LinearLayout>


        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewChequeNo"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:layout_gravity="center"

                android:text=" Cheque No"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="Enter Cheque No "
                android:id="@+id/idEditTextChequeNo"
                android:gravity="bottom"
                android:textColor="#000000"
                android:background="@drawable/shaperound"
                style="?android:textAppearanceMedium"
                android:inputType="numberDecimal"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />




        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewChequeDate"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Cheque Date"
                android:textStyle="bold"
                android:layout_gravity="center"

                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="Enter Cheque Date"
                android:gravity="bottom"
                android:background="@drawable/shaperound"
                android:id="@+id/idEditTextChequeDate"
                style="?android:textAppearanceMedium"
                android:inputType="date"
                android:layout_weight="1.5"
                android:textColor="#000000"
                android:clickable="true"

                android:layout_width="0dp"
                android:layout_height="wrap_content" />




        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewBalanceDr"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Balance "
                android:layout_gravity="center"

                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="Enter Balance"
                android:gravity="bottom"
                android:background="@drawable/shaperound"
                android:id="@+id/idEditTextBalanceDr"
                style="?android:textAppearanceMedium"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:textColor="#000000"
                android:clickable="true"
                android:editable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/idTextViewBalanceDrnext"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Dr "
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />




        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewRefrenceBillNo"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Refrence Bill No"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:hint="Enter Refrence Bill No"
                android:gravity="bottom"
                android:background="@drawable/shaperound"
                android:id="@+id/idEditTextRefrenceBillNo"
                style="?android:textAppearanceMedium"
                android:inputType="number"
                android:layout_weight="1.5"
                android:textColor="#000000"
                android:clickable="true"
                android:editable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />




        </LinearLayout>



        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewAmount"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:layout_gravity="center"

                android:text=" Amount Recieved"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="Enter Amount Recieved"
                android:id="@+id/idEditTextBillAmount"
                android:gravity="bottom"
                android:textColor="#000000"
                android:background="@drawable/shaperound"
                style="?android:textAppearanceMedium"
                android:inputType="numberDecimal"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />



        </LinearLayout>
        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextViewTotalPaidAmount"
                android:textColor="@color/textColor"
                android:layout_margin="5dp"
                android:text="Total Amount"
                android:textStyle="bold"
                style="?android:textAppearanceSmall"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_gravity="center"

                android:layout_height="wrap_content" />
            <EditText
                android:hint="Enter Total Amount "
                android:id="@+id/idEditTextTotalPaidAmount"
                android:gravity="bottom"
                android:textColor="#000000"
                android:background="@drawable/shaperound"
                style="?android:textAppearanceMedium"
                android:inputType="numberDecimal"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />



        </LinearLayout>









        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"

                >

                <Button
                    android:id="@+id/idButtonSave"
                    style="?android:textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@drawable/buttonshaperoundcolor"
                    android:text="Save"
                    android:textColor="#ffffff"
                    android:textColorHint="#000000"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"

                >

                <Button
                    android:id="@+id/idButtonCancel"
                    style="?android:textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:background="@drawable/buttonshaperoundcolor"
                    android:text="Cancel"
                    android:textColor="#ffffff"
                    android:textColorHint="#000000"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>





    </LinearLayout>
    </ScrollView>

</LinearLayout>
