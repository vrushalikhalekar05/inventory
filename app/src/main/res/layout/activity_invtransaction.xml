<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.ampinity.inv.Activity.INVTransactionActivity">




    <LinearLayout
        android:weightSum="3"

        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/idTranCashIn"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"

            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_margin="10dp"
                android:layout_weight="0.3"
                android:gravity="center"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Cash In"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/Red"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:id="@+id/idTranCashInbottom">

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"

            android:id="@+id/idTranCashOut"

            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"

            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_margin="10dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Cash Out"/>




            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/red"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:id="@+id/idTranCashOutbottom">

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/idAddTran"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"

            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_margin="10dp"
                android:layout_weight="0.3"
                android:gravity="center"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Add Transaction"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/red"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:id="@+id/idAddTranbottom">

            </LinearLayout>
        </LinearLayout>





    </LinearLayout>




    <FrameLayout

        android:id="@+id/content_framemaster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9">



    </FrameLayout>

</LinearLayout>
