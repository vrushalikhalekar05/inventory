<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.ampinity.inv.fragment.AccountBalancesheetfragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:weightSum="2"
        android:orientation="horizontal">
        <ScrollView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scrollbars="horizontal|vertical"
            android:layout_width="0dp"
            android:layout_marginTop="5dip"
            android:scrollbarStyle="outsideInset"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Liability"/>

                <TableLayout

                    android:divider="@color/white"
                    android:paddingTop="10dp"
                    android:layout_margin="10dp"

                    android:showDividers="middle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*">
                    <TableRow
                        android:background="@drawable/table_row_last_bg"
                        >
                        <TextView
                            android:gravity="center"
                            android:text=" Liability "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/tableheaderIdprofitloss"




                            />
                        <TextView
                            android:gravity="center"
                            android:text=" Amount "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/table_cell_bg"
                            />

                    </TableRow>
                    <TableRow
                        android:background="@drawable/table_row_bg">
                        <TextView
                            android:textColor="@color/textcolor"
                            android:text="1"
                            android:gravity="center"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            />

                    </TableRow>
                    <TableRow
                        android:background="@drawable/table_row_bg"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/textcolor"
                            android:text="2"
                            android:gravity="center"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            android:layout_height="wrap_content" />

                    </TableRow>

                </TableLayout>
            </LinearLayout>

        </ScrollView>
        <ScrollView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scrollbars="horizontal|vertical"
            android:layout_width="0dp"
            android:layout_marginTop="5dip"
            android:scrollbarStyle="outsideInset"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Asset"/>

                <TableLayout

                    android:divider="@color/white"
                    android:paddingTop="10dp"
                    android:layout_margin="10dp"

                    android:showDividers="middle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*">
                    <TableRow
                        android:background="@drawable/table_row_last_bg"
                        >
                        <TextView
                            android:gravity="center"
                            android:text=" Asset "
                            android:textStyle="bold"
                            android:textColor="@color/white"





                            />
                        <TextView
                            android:gravity="center"
                            android:text=" Amount "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/table_cell_bg"
                            android:id="@+id/tableheaderNameAttribute"
                            />

                    </TableRow>
                    <TableRow
                        android:background="@drawable/table_row_bg">
                        <TextView
                            android:textColor="@color/textcolor"
                            android:text="1"
                            android:gravity="center"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            />

                    </TableRow>
                    <TableRow
                        android:background="@drawable/table_row_bg"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/textcolor"
                            android:text="2"
                            android:gravity="center"
                            android:textStyle="italic"

                            />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/textcolor"
                            android:text="xyz"
                            android:textStyle="italic"
                            android:background="@drawable/table_cell_bg"
                            android:layout_height="wrap_content" />

                    </TableRow>

                </TableLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export to Excel File"
        android:id="@+id/idButtonExportExcelFile"
        style="?android:textAppearanceMedium"

        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffff"
        android:textColorHint="#000000"
        android:textStyle="bold"/>



</LinearLayout>
